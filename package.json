{
  "name": "piteo",
  "version": "0.1.0",
  "private": "true",
  "scripts": {
    "dev": "cargo watch -i schema.graphql -x run",
    "build": "cargo build",
    "start": "cargo run",
    "lint": "cargo clippy",
    "test": "cargo test",
    "fmt": "cargo fmt",
    "migrate": "prisma migrate reset --force --skip-generate",
    "generate": "cargo run --bin piteo-cli -- generate",
    "postmigrate": "diesel print-schema > packages/data/src/schema.rs"
  },
  "prisma": {
    "seed": "./seed.sh"
  },
  "devDependencies": {
    "prisma": "^3.1.1"
  }
}
